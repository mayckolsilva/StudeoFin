<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#F3F3F3" android:layout_height="wrap_content" android:layout_width="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/des_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="Descrição"
            android:textSize="16dp">
            android:text="Descrição"</TextView>

        <TextView
            android:id="@+id/des_tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="Tipo"
            android:textSize="16dp">
            android:text="Tipo de categoria"
        </TextView>

    </LinearLayout>

</RelativeLayout>